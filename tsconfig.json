{
  "compilerOptions": {
    // Svelte では ES6 以降のシンタックスしかサポートされない
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["DOM", "ES2015"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // 型定義ファイルの置き場所を明示
    "baseUrl": ".",
    "paths": {
      "*": ["@types/*"]
    }
  }
}